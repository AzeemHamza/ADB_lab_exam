{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Flask (app.py)",
      "type": "python",
      "request": "launch",
      "module": "flask",
      "env": {
        "FLASK_APP": "app.py",
        "FLASK_ENV": "development"
      },
      "args": ["run", "--no-debugger", "--no-reload"],
      "jinja": true
    },
    {
      "name": "Python: Pytest Current File",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/.venv/bin/pytest",
      "args": ["-q", "${file}"],
      "console": "integratedTerminal"
    }
  ]
}
